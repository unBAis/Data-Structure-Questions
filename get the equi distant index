
class Solution:
    def pivotIndex(self,nums: List[int]) -> int:
        import numpy as np
        
        sum_num = np.sum(nums)
        left_sum = 0 

        for i,x in enumerate(nums):
            right_sum = sum_num - left_sum - x
            print(left_sum, right_sum)
            if left_sum == right_sum:
                return i
            left_sum += x
        return -1

nums = [1,7,3,6,5,6]
sol = Solution()
sol.pivotIndex(nums)











